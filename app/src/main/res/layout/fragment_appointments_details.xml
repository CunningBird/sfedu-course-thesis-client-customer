<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_account"
        android:tint="@color/main_app_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/serviceInfoText"
        tools:text="[Service name]"
        android:paddingStart="11dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_status"
        app:layout_constraintStart_toEndOf="@+id/img_status"
        app:layout_constraintTop_toTopOf="@+id/img_status" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_geo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_account"
        android:tint="@color/main_app_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_status" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_geo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/serviceInfoText"
        tools:text="[service time]"
        android:paddingStart="11dp"
        android:paddingEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_geo"
        app:layout_constraintStart_toEndOf="@+id/img_geo"
        app:layout_constraintTop_toTopOf="@+id/img_geo" />

